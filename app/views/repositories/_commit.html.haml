%li.commit
  .row-fluid
    .span9
      .message= link_to commit.message_title, repositories_path
      .time-author
        by
        = commit.committer_name 
        = time_ago_in_words(commit.committer_time)
        ago
    .span3
      .pull-right.short_hash
        = link_to commit.short_hash, repositories_path, class: 'btn'
    .clearfix