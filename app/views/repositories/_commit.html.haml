%li.commit
  .row-fluid
    .span9
      .message= link_to commit.message_title, browse_commits_root_path(@repository.path, commit.commit_hash)
      .time-author
        by
        = commit.committer_name 
        = time_ago_in_words(commit.committer_time)
        ago
    .span3
      .pull-right.short_hash
        = link_to commit.short_hash, browse_commits_root_path(@repository.path, commit.commit_hash), class: 'btn'
    .clearfix