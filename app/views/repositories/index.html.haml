- provide(:title, 'Repositories')
%h1 Repositories

.row
  .span6
    = form_tag repositories_path, class: 'input-prepend input-append top-search' do
      = search_field :repository, :title
      = button_tag 'Search', class: 'btn btn-primary'
  .span6  
    .pull-right= paginate @repositories
.clearfix    

- @repositories.each do |repository|
  %article.well.well-small.box
    .top.row-fluid
      .span9
        %h1= link_to repository.title, repositories_path
      .span3
        .path.pull-right= repository.path
      .clearfix
    .row-fluid
      .span2
        %i.icon-sitemap.icon-4x
        .browse-history
          = link_to 'Browse History', repositories_path, class: 'btn btn-primary'
      .span10
        %ol
          - repository.commits.each do |commit|
            %li.commit
              .row-fluid
                .span9
                  .message= link_to commit.message_title, repositories_path
                  .time-author
                    by
                    = commit.committer_name 
                    = time_ago_in_words(commit.committer_time)
                    ago
                .span3
                  .pull-right.short_hash
                    = link_to commit.short_hash, repositories_path, class: 'btn'
                .clearfix
  
.well.pull-right.well-small= page_entries_info @repositories
.clearfix
