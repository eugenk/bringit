- if flash[:error]
  .alert.alert-error
    %button.close{ 'data-dismiss' => 'alert', type: 'button' } &times;
    =flash[:error]
- if alert || flash[:warning]
  .alert.alert-block
    %button.close{ 'data-dismiss' => 'alert', type: 'button' } &times;
    =alert || flash[:warning] 
- if notice || flash[:notice]
  .alert.alert-info
    %button.close{ 'data-dismiss' => 'alert', type: 'button' } &times;
    =notice || flash[:notice]
- if flash[:success]
  .alert.alert-success
    %button.close{ 'data-dismiss' => 'alert', type: 'button' } &times;
    =flash[:success]